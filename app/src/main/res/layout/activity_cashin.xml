<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".CashinActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cin"
        android:text="Cash In"
        android:textSize="28dp"
        android:textColor="#244030"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cindescription"
        android:layout_below="@id/cin"
        android:text="Hassle-free cash in on Wavellet!"
        android:textColor="#98244030"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/partners"
        android:layout_below="@id/cindescription"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <Button
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Over the Counter"
            android:textSize="15dp"
            android:textColor="#03577A"
            android:padding="20dp"
            android:background="@drawable/border"
            android:drawableTop="@drawable/ic_counter"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp" />

        <Button
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Online Banks"
            android:textSize="15dp"
            android:textColor="#03577A"
            android:padding="20dp"
            android:background="@drawable/border"
            android:drawableTop="@drawable/ic_bank"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp" />

        <Button
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Global Partners"
            android:textSize="15dp"
            android:textColor="#03577A"
            android:padding="20dp"
            android:background="@drawable/border"
            android:drawableTop="@drawable/ic_globe"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentbal"
        android:layout_below="@id/partners"
        android:text="Balance"
        android:textSize="18dp"
        android:textColor="#98244030"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cinamount"
        android:layout_below="@id/currentbal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/radius"
            android:hint="Enter desired amount"
            android:inputType="number"
            android:padding="20dp"
            android:textColor="#03577A"
            android:textColorHint="#9503577A"
            android:textSize="23dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cinnote"
        android:layout_below="@id/cinamount"
        android:text="Note: Minimum cash in is P100."
        android:textColor="#98244030"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:id="@+id/cashin"
        android:layout_below="@id/cinnote"
        android:text="Cash In"
        android:textSize="18dp"
        android:textColor="#03577A"
        android:background="@drawable/button"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp" />

</RelativeLayout>